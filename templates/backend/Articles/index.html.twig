{% extends 'base.html.twig' %}

{% block title %}
	Administration des articles
	{{ parent() }}
{% endblock %}

{% block body %}
	<section class="container mt-2">
		<h1 class="text-center">Administration des articles</h1>
		<a href="{{ path('admin.articles.create') }}" class="mt-2 btn btn-primary">Cr√©er un article</a>
		<div class="row mt-2 gy-4">
			{% for article in articles %}
				<div class="col-md-4">
					<div class="card border-{{ article.enable ? 'success' : 'danger' }}">
						<h2 class="card-header fs-4">{{ article.title }}</h2>
						<div class="card-body">
							<em class="text-muted">{{ article.slug }}</em>
							<p class="card-text">{{ article.createdAt|format_datetime('full', 'none') }}</p>
							<p class="card-text">{{ (article.content|slice(0,150) ~ '...')|sanitize_html }}</p>

							<div class="form-check form-switch">
								<input class="form-check-input" type="checkbox" id="article-switch-{{ article.id }}" {{ article.enable ? 'checked' }} data-switch-article-id="{{ article.id }}" />
								<label class="form-check-label fw-bold text-{{ article.enable ? 'success' : 'danger'}}" for="article-switch-{{ article.id }}">{{ article.enable ? 'Actif' : 'Inactif' }}</label>
							</div>

							<div class="d-flex flex-wrap justify-content-between mt-2">
								<a href="{{ path('admin.articles.update', {id: article.id}) }}" class="btn btn-warning">Modifier</a>
								{% include 'Backend/Articles/_deleteForm.html.twig' %}
							</div>
						</div>
					</div>
				</div>
			{% endfor %}
		</div>
	</section>
{% endblock %}
